@model IEnumerable<Category>

	<link rel="stylesheet" href="~/css/adminPages.css" asp-append-version="true" />

	<div class="container px-4 mt-4 border border-2 border-secondary">
		<div class="row pt-3">
			<div class="col-6">
				<h2 class="text-dark">Category List</h2>
			</div>
			<div class="col-6 text-end">
				<a asp-controller="Category" asp-action="Create" class="btn btn-success"><i class="bi bi-folder-plus"></i>&nbsp;&nbsp; Create New Category</a>
			</div>	
		</div>

		<hr/>

	
		<table class="table table-bordered table-striped my-5">
			<thead>
				<tr>
					<th>
						Category Name
					</th>
					<th class="text-center w-30">
						Amount
					</th>
					<th>

					</th>
				</tr>
			</thead>
			<tbody style="color:white;font-size:1.1rem;">
				@foreach(var item in Model){
					<tr>
						<td width="50%">
							@item.Name
						</td>
						<td width="20%" class="text-center">
							@item.Quantity
						</td>
						<td>
							<div class="d-flex justify-content-evenly">
							<a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-file-earmark-break"></i>&nbsp;&nbsp; Edit</a>
							<a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-folder-x"></i>&nbsp;&nbsp; Delete</a>
							</div>
						</td>
					</tr>
				}
			</tbody>
		</table>
	
	</div>
