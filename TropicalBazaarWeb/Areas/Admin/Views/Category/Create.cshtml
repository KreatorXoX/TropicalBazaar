@model Category

<link rel="stylesheet" href="~/css/adminPages.css" asp-append-version="true" />


   <div class="container border border-2 border-secondary p-3 mt-4">
        <form method="post">
	
		        <div class="row pb-2">
			        <h2 class="text-dark"> Create Category </h2>
			        <hr  />
		        </div>

        @*		<div asp-validation-summary="All" class="text-danger"></div>
        *@		
		        <div class="row">
			        <div class="my-1 col-6">
				        <label asp-for ="Name"></label>
				        <input asp-for="Name" class="form-control"/>
				        <span asp-validation-for="Name" class="text-danger"></span>
			        </div>
			        <div class="my-1 col-6">
				        <label asp-for ="Quantity"></label>
				        <input asp-for="Quantity" class="form-control"/>
				        <span asp-validation-for="Quantity" class="text-danger"></span>
			        </div>
			        <div class=" mt-3 col-12 text-end">
				        <button type = "submit" class="btn btn-success" style = "width:150px"> Create </button>
				        <a asp-controller="Category" asp-action="Index" class="btn btn-info" style = "width:150px">Back to List</a>
			        </div>
		        </div>
		

        </form>
	</div>


@section Scripts{
	@{
		<partial name = "_ValidationScriptsPartial" />
	}
}